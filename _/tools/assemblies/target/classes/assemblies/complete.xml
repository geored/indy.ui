<assembly>
  <id>complete</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>indy</baseDirectory>
  
  <dependencySets>
    <!-- this main project artifact -->
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <includes>
        <include>${project.groupId}:${project.artifactId}:jar:${project.version}</include>
      </includes>
      <outputDirectory>lib/local</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>

    <!-- user interface -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
      <includes>
        <include>org.commonjava.indy.ui*</include>
      </includes>
      <outputDirectory>var/lib/indy/ui</outputDirectory>
      <directoryMode>775</directoryMode>
      <fileMode>664</fileMode>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>org.commonjava.indy.rest*</include>
      </includes>
      <outputDirectory>var/lib/indy/ui</outputDirectory>
      <outputFileNameMapping>swagger.${artifact.extension}</outputFileNameMapping>
      <fileMode>664</fileMode>
      <unpack>false</unpack>
    </dependencySet>
    
    <!-- data sets -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>*:tar.gz:dataset:*</include>
      </includes>
      <outputDirectory>var/lib/indy/data</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- document sets -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>*:tar.gz:docset:*</include>
      </includes>
      <outputDirectory>usr/share/doc/indy</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- bin sets -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>*:tar.gz:binset:*</include>
      </includes>
      <outputDirectory>bin</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- configuration sets -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>*:tar.gz:confset:*</include>
      </includes>
      <outputDirectory>etc/indy</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- UI sets -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>*:tar.gz:uiset:*</include>
      </includes>
      <outputDirectory>var/lib/indy/ui</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- React UI sets -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>*:tar.gz:reactui:*</include>
      </includes>
      <outputDirectory>var/lib/indy/ui</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    
    <!-- aggregated commonjava classes -->
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>true</useProjectAttachments>
      <includes>
        <include>org.commonjava.indy.embed:*</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
    
    <!-- other runtime dependencies -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.commonjava*:*</exclude>
      </excludes>
      <outputDirectory>lib/thirdparty</outputDirectory>
    </dependencySet>
  </dependencySets>
  
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/data</directory>
      <outputDirectory>var/lib/indy/data</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/etc</directory>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
  </fileSets>
  
</assembly>
